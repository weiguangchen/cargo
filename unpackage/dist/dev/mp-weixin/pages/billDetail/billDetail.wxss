page {
  padding: 0 24rpx 180rpx;
}
.status-wrapper {
  margin-bottom: 32rpx;
  padding-left: 12rpx;
}
.status-wrapper .status-text {
  display: flex;
  align-items: center;
  font-weight: bold;
  font-size: 48rpx;
  line-height: 64rpx;
  color: var(--title-color);
}
.status-wrapper .status-tip {
  font-size: 28rpx;
  line-height: 48rpx;
  color: var(--content-color);
}
.location-wrapper {
  padding: 0 24rpx;
  margin: 0 0 20rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
}
.location-wrapper .from-wrapper,
.location-wrapper .to-wrapper {
  display: flex;
  align-items: center;
}
.location-wrapper .from-wrapper .icon,
.location-wrapper .to-wrapper .icon {
  flex: none;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  border-radius: 8rpx;
  font-weight: 600;
  font-size: 22rpx;
  color: #FFFFFF;
  margin-right: 24rpx;
}
.location-wrapper .from-wrapper .content-box,
.location-wrapper .to-wrapper .content-box {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 24rpx 0;
}
.location-wrapper .from-wrapper .content-box .info,
.location-wrapper .to-wrapper .content-box .info {
  flex: 1;
  line-height: 48rpx;
  margin-right: 20rpx;
}
.location-wrapper .from-wrapper .content-box .info .name,
.location-wrapper .to-wrapper .content-box .info .name {
  font-weight: 500;
  font-size: 30rpx;
  color: var(--title-color);
}
.location-wrapper .from-wrapper .content-box .info .address,
.location-wrapper .to-wrapper .content-box .info .address {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--sub-color);
}
.location-wrapper .from-wrapper .icon {
  background-color: var(--main-color);
}
.location-wrapper .to-wrapper .icon {
  background-color: #FC7E2C;
}
.material-wrapper {
  padding: 0 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
}
.material-wrapper .material {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 4rpx;
}
.material-wrapper .material .label {
  flex: 1;
}
.material-wrapper .material .label .name {
  font-weight: bold;
  font-size: 30rpx;
  color: var(--title-color);
  line-height: 48rpx;
}
.material-wrapper .material .label .info {
  display: flex;
  align-items: center;
  color: var(--sub-color);
  font-size: 26rpx;
}
.material-wrapper .material .my-price.unit {
  color: var(--content-color) !important;
}
.bangdan,
.bill-car,
.remark {
  padding: 28rpx;
  background-color: #FFFFFF;
  margin: 0 0 24rpx;
  border-radius: 24rpx;
}
.bangdan {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: var(--title-color);
  line-height: 48rpx;
}
.bangdan .name {
  font-weight: bold;
  font-size: 30rpx;
}
.bangdan .no {
  font-size: 26rpx;
  color: var(--sub-color);
}
.bill-car {
  padding: 0 28rpx;
}
.bill-car .car-info-wrapper {
  padding: 32rpx 0;
}
.bill-car .car-info-wrapper .info {
  display: flex;
  align-items: center;
}
.bill-car .car-info-wrapper .info .type {
  margin-left: 16rpx;
  color: var(--title-color);
  font-size: 26rpx;
  font-weight: bold;
}
.bill-car .car-info-wrapper .person {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: var(--sub-color);
}
.bill-car .car-info-wrapper .person .user {
  margin-right: 24rpx;
}
.bill-car .weight {
  font-weight: bold;
  padding: 32rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: var(--content-color);
  line-height: 48rpx;
}
.remark {
  line-height: 40rpx;
}
.remark .title {
  font-weight: bold;
  font-size: 30rpx;
  color: var(--title-color);
  margin-bottom: 16rpx;
}
.remark .content {
  font-size: 26rpx;
  color: #4E5356;
  text-align: left;
}
.item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 40rpx;
  font-size: 26rpx;
}
.item .label {
  color: var(--sub-color);
}
.item .value {
  display: flex;
  align-items: center;
  color: var(--title-color);
}
.info-wrapper {
  padding: 32rpx 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
}
.info-wrapper .item {
  margin-bottom: 28rpx;
}
.info-wrapper .item:last-child {
  margin-bottom: 0;
}
.info-wrapper .item.my-border-bottom {
  padding: 0 4rpx 32rpx;
  margin-bottom: 32rpx;
}