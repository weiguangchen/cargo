page {
  padding: 24rpx 24rpx calc(var(--safe-area-inset-bottom) + 180rpx);
}
.item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 40rpx;
  font-size: 26rpx;
}
.item .label {
  color: var(--sub-color);
}
.item .value {
  display: flex;
  align-items: center;
  color: var(--title-color);
}
.status-wrapper {
  padding-left: 8rpx;
  margin-bottom: 32rpx;
}
.status-wrapper .status-text {
  color: var(--title-color);
  display: flex;
  align-items: center;
  font-size: 48rpx;
  line-height: 64rpx;
  font-weight: bold;
}
.status-wrapper .tip {
  color: var(--content-color);
  font-size: 28rpx;
}
.mfrs-wrapper {
  display: flex;
  justify-content: space-between;
  padding: 32rpx 32rpx 32rpx 28rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
}
.mfrs-wrapper .mfrs-name {
  font-weight: bold;
  font-size: 32rpx;
  color: var(--title-color);
  line-height: 56rpx;
}
.mfrs-wrapper .person {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--sub-color);
  line-height: 48rpx;
}
.mfrs-wrapper .person .user {
  margin-right: 24rpx;
}
.material-wrapper {
  padding: 0 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
}
.material-wrapper .material {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 4rpx;
}
.material-wrapper .material .label {
  flex: 1;
}
.material-wrapper .material .label .name {
  font-weight: bold;
  font-size: 30rpx;
  color: var(--title-color);
  line-height: 48rpx;
}
.material-wrapper .material .label .info {
  display: flex;
  align-items: center;
  color: var(--sub-color);
  font-size: 26rpx;
}
.material-wrapper .material .my-price.unit {
  color: var(--content-color) !important;
}
.info-wrapper {
  padding: 32rpx 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
}
.info-wrapper .item {
  margin-bottom: 28rpx;
}
.info-wrapper .item.my-border-bottom {
  padding: 0 4rpx 32rpx;
  margin-bottom: 32rpx;
}