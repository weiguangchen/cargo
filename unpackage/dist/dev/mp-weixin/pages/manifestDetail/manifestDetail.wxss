page {
  padding: 24rpx 24rpx calc(var(--safe-area-inset-bottom) + 180rpx);
}
.item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 40rpx;
  font-size: 26rpx;
}
.item .label {
  color: var(--sub-color);
}
.item .value {
  display: flex;
  align-items: center;
  color: var(--title-color);
}
.status-wrapper {
  margin-bottom: 32rpx;
}
.status-wrapper .status-text {
  color: var(--title-color);
  display: flex;
  align-items: center;
  font-size: 48rpx;
  line-height: 64rpx;
  font-weight: bold;
}
.status-wrapper .tip {
  color: var(--content-color);
  font-size: 28rpx;
}
.location-wrapper {
  padding: 0 24rpx;
  margin: 0 0 20rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
}
.location-wrapper .from-wrapper,
.location-wrapper .to-wrapper {
  display: flex;
  align-items: center;
}
.location-wrapper .from-wrapper .icon,
.location-wrapper .to-wrapper .icon {
  flex: none;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  border-radius: 8rpx;
  font-weight: 600;
  font-size: 22rpx;
  color: #FFFFFF;
  margin-right: 24rpx;
}
.location-wrapper .from-wrapper .content-box,
.location-wrapper .to-wrapper .content-box {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 24rpx 0;
}
.location-wrapper .from-wrapper .content-box .info,
.location-wrapper .to-wrapper .content-box .info {
  flex: 1;
  line-height: 48rpx;
  margin-right: 20rpx;
}
.location-wrapper .from-wrapper .content-box .info .name,
.location-wrapper .to-wrapper .content-box .info .name {
  font-weight: 500;
  font-size: 30rpx;
  color: var(--title-color);
}
.location-wrapper .from-wrapper .content-box .info .person,
.location-wrapper .to-wrapper .content-box .info .person {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--sub-color);
}
.location-wrapper .from-wrapper .content-box .info .person .user,
.location-wrapper .to-wrapper .content-box .info .person .user {
  margin-right: 24rpx;
}
.location-wrapper .from-wrapper .icon {
  background-color: var(--main-color);
}
.location-wrapper .to-wrapper .icon {
  background-color: #FC7E2C;
}
.material-wrapper {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 0 24rpx 32rpx;
  margin-bottom: 20rpx;
}
.material-wrapper .list .material {
  padding: 28rpx 4rpx;
  line-height: 48rpx;
}
.material-wrapper .list .material .name {
  font-weight: bold;
  font-size: 30rpx;
  color: var(--title-color);
}
.material-wrapper .list .material .info {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--sub-color);
}
.material-wrapper .divider {
  position: relative;
  margin-bottom: 30rpx;
}
.material-wrapper .divider::before, .material-wrapper .divider::after {
  content: "";
  display: block;
  position: absolute;
  z-index: 200;
  width: 24rpx;
  height: 24rpx;
  background-color: var(--page-bg);
  border-radius: 50%;
}
.material-wrapper .divider::before {
  left: -36rpx;
  top: 0;
}
.material-wrapper .divider::after {
  right: -36rpx;
  bottom: 0;
}
.material-wrapper .divider .dots {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 24rpx;
  width: 100%;
  overflow: hidden;
}
.material-wrapper .divider .dots .dot {
  flex: none;
  width: 8rpx;
  height: 8rpx;
  margin: 0 6rpx;
  border-radius: 50%;
  background-color: var(--page-bg);
}
.material-wrapper .total-payed.item {
  margin-bottom: 22rpx;
}
.material-wrapper .total-payed.item .label {
  color: var(--red-color);
}
.material-wrapper .expect-price.item .value {
  font-weight: bold;
  color: var(--sub-color);
}
.material-wrapper view:last-child {
  margin-bottom: 0 !important;
}
.info-wrapper {
  padding: 32rpx 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
}
.info-wrapper .item {
  margin-bottom: 28rpx;
}
.info-wrapper .item.my-border-bottom {
  padding: 0 4rpx 32rpx;
  margin-bottom: 32rpx;
}