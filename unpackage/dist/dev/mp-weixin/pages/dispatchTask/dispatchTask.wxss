.bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  z-index: -1;
  height: 476rpx;
  background: linear-gradient(270deg, #31CE57, #07B130);
}
page {
  padding: 0 24rpx 300rpx;
}
.top-box {
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  padding: 36rpx 24rpx 32rpx;
  margin-bottom: 20rpx;
}
.top-box .select-location {
  padding-bottom: 32rpx;
  margin-bottom: 32rpx;
}
.top-box .select-location .from-wrapper,
.top-box .select-location .to-wrapper {
  display: flex;
  align-items: center;
  height: 88rpx;
}
.top-box .select-location .from-wrapper .icon,
.top-box .select-location .to-wrapper .icon {
  flex: none;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  border-radius: 8rpx;
  font-weight: 600;
  font-size: 22rpx;
  color: #FFFFFF;
}
.top-box .select-location .from-wrapper .info,
.top-box .select-location .to-wrapper .info {
  flex: 1;
  margin: 0 24rpx;
}
.top-box .select-location .from-wrapper .info .placeholder,
.top-box .select-location .to-wrapper .info .placeholder {
  font-weight: 500;
  font-size: 30rpx;
  color: var(--intr-color);
  line-height: 48rpx;
}
.top-box .select-location .from-wrapper .info .name,
.top-box .select-location .to-wrapper .info .name {
  font-weight: 500;
  font-size: 30rpx;
  color: var(--title-color);
  line-height: 48rpx;
}
.top-box .select-location .from-wrapper .info .person,
.top-box .select-location .to-wrapper .info .person {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--sub-color);
  line-height: 36rpx;
}
.top-box .select-location .from-wrapper .info .person .user,
.top-box .select-location .to-wrapper .info .person .user {
  margin-right: 24rpx;
}
.top-box .select-location .from-wrapper {
  margin-bottom: 40rpx;
}
.top-box .select-location .from-wrapper .icon {
  background-color: var(--main-color);
}
.top-box .select-location .to-wrapper .icon {
  background-color: #FC7E2C;
}
.top-box .select-time {
  display: flex;
  align-items: center;
  height: 48rpx;
}
.top-box .select-time .time-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
}
.top-box .select-time .time-wrapper .start-time,
.top-box .select-time .time-wrapper .end-time {
  flex: 1;
  font-size: 26rpx;
  color: var(--title-color);
  line-height: 48rpx;
}
.top-box .select-time .time-wrapper .start-time .placeholder,
.top-box .select-time .time-wrapper .end-time .placeholder {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--intr-color);
  line-height: 48rpx;
}
.top-box .select-time .time-wrapper .start-time .time,
.top-box .select-time .time-wrapper .end-time .time {
  display: flex;
  align-items: center;
}
.top-box .select-time .time-wrapper .time--active {
  opacity: 0.45;
}
.form-item-wrapper {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 0 28rpx;
  margin-bottom: 20rpx;
}
.form-item-wrapper .uv-form-item__body {
  padding: 32rpx 0 !important;
}
.form-item-wrapper .uv-form-item__body__left__content__label {
  font-size: 28rpx !important;
  color: var(--content-color) !important;
  line-height: 48rpx;
}
.form-item-wrapper.material .title-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 32rpx;
}
.form-item-wrapper.material .title-wrapper .title {
  font-weight: bold;
  font-size: 30rpx;
  color: var(--title-color);
  line-height: 40rpx;
}
.form-item-wrapper.material .title-wrapper .no {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--intr-color);
  line-height: 40rpx;
}
.form-item-wrapper.material .select-material {
  padding: 0 24rpx;
  background: var(--page-bg);
  border-radius: 16rpx;
}
.form-item-wrapper.material .select-material .tip {
  padding: 36rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: var(--sub-color);
  line-height: 40rpx;
}
.page-footer {
  display: flex;
  justify-content: space-between;
}
.page-footer .warning {
  position: absolute;
  left: 0;
  width: 100%;
  top: 0;
  font-weight: 500;
  font-size: 24rpx;
  transform: translateY(-100%);
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background-color: #FC7E2C;
  color: #FFFFFF;
}
.page-footer .right {
  flex: none;
  width: 432rpx;
  margin-left: 32rpx;
}
.page-footer .left {
  font-size: 26rpx;
  color: var(--sub-color);
  line-height: 48rpx;
}
.page-footer .left .price1,
.page-footer .left .price2 {
  margin-left: 12rpx;
  font-size: 28rpx;
}
.page-footer .left .price1 {
  font-weight: 600;
  color: var(--red-color);
}
.page-footer .left .price2 {
  font-weight: 400;
  color: var(--sub-color);
}