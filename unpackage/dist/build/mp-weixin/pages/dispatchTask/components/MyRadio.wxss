.radio-group{width:-webkit-fit-content;width:fit-content;display:flex;align-items:center;justify-content:flex-end}.radio-group .radio-box{width:-webkit-fit-content;width:fit-content;display:flex;align-items:center;font-size:28rpx;color:var(--content-color);line-height:48rpx}.radio-group .radio-box:not(:last-child){margin-right:20rpx}.radio-group .radio-box .radio{width:20rpx;height:20rpx;border:2rpx solid var(--divider);border-radius:50%;background-color:#fff;margin-right:12rpx}.radio-group .radio-box.active{color:var(--main-color)}.radio-group .radio-box.active .radio{display:flex;align-items:center;justify-content:center;border-color:var(--main-color)}.radio-group .radio-box.active .radio:after{content:"";display:block;width:12rpx;height:12rpx;border-radius:50%;background-color:var(--main-color)}
