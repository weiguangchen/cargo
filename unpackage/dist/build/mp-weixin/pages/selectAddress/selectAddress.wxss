.fullpage{height:100vh;position:fixed;width:100%;left:0;top:0;z-index:10000;transform:translateY(100%);transition:all .4s}.page-footer{border-radius:24rpx 24rpx 0rpx 0rpx;overflow:hidden;padding:0}.page-footer .footer-top{padding:24rpx;background-color:var(--page-bg)}.page-footer .location-wrapper{padding:28rpx 24rpx 32rpx;background:#fff;border-radius:24rpx;overflow:hidden}.page-footer .location-wrapper .tag{width:-webkit-fit-content;width:fit-content;display:flex;align-items:center;padding:0 12rpx;height:44rpx;border-radius:8rpx;font-weight:500;font-size:26rpx;color:#fff;margin-bottom:20rpx}.page-footer .location-wrapper .tag.zhuang{background-color:var(--main-color)}.page-footer .location-wrapper .tag.xie{background-color:#fc7e2c}.page-footer .location-wrapper .name{color:var(--title-color);font-weight:700;font-size:36rpx;line-height:44rpx;margin-bottom:20rpx}.page-footer .location-wrapper .address{font-size:26rpx;color:var(--sub-color);line-height:32rpx}.page-footer .location-wrapper .person{font-weight:700;font-size:28rpx;color:var(--title-color);line-height:48rpx}.page-footer .btns{padding:24rpx 24rpx calc(var(--safe-area-inset-bottom) + 24rpx)}.customCallout .content{border-radius:28rpx;box-shadow:0 4rpx 4rpx rgba(0,0,0,.25);padding:10rpx 20rpx;background-color:#fff;font-weight:500;font-size:26rpx;color:var(--title-color);line-height:36rpx}
